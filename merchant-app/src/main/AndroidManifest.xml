<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.soma.merchant"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bluetooth permissions (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Legacy (زیر Android 12) -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Foreground service (برای BLE در برخی دستگاه‌ها لازم می‌شود) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />

    <application
        android:allowBackup="true"
        android:label="آپ آفلاین سوما (فروشنده)"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOMAMerchant">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- سرویس BLE برای نقش فروشنده -->
        <service
            android:name=".ble.BlePeripheralService"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>
